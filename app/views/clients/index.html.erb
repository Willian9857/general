
<style>
  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  th, td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
  }

  th {
    background-color: #f2f2f2;
  }

  tbody tr:hover {
    background-color: #f5f5f5;
  }

  .button {
    display: inline-block;
    padding: 8px 12px;
    text-decoration: none;
    background-color: #007BFF;
    color: #fff;
    border: 1px solid #007BFF;
    border-radius: 4px;
  }

  .button:hover {
    background-color: #0056b3;
    border-color: #0056b3;
  }
</style>


<h1>Clientes</h1>
<table border="2">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Endereço</th>
      <th>Orçamento</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.nome %></td>
        <td><%= client.endereco %></td>
        <td><%= "R$#{client.preco}" %></td>
        <td>
          <%= button_to 'Visualizar', client_path(client), method: :get %>
          <%= button_to 'Editar', edit_client_path(client), method: :get %>
          <%= button_to 'Deletar', client_path(client), form: { data: { turbo_confirm: 'Tem certeza?' } }, method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
